{
  "name": "monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "npx tsc --build",
    "server": "cd backend && npx tsx -r dotenv/config server.ts",
    "tsc": "npx tsc --noEmit",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "setup": "yarn install && cd backend && yarn install && cd ../frontend && yarn install",
    "dev": "cd frontend && yarn dev",
    "start": "concurrently \"yarn server\" \"yarn dev\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2",
    "zod": "^3.24.2",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "ts-node": "^10.9.2"
  }
}
